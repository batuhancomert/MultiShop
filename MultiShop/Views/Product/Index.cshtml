@model IEnumerable<MultiShop.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Product List</h3>
                </div><!-- /.box-header -->
                <br />
                <a href="@Url.Action("Create")" class="btn btn-primary btn-block">New Registration</a>
                <br />
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Approved</th>
                                <th>Home</th>
                                <th>Popular</th>
                                <th>Category Name</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model)
                            {
                                <tr>
                                    <td><img src="~/Content/Images/@item.Image" width="80" height="60" /></td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @if (item.IsApproved)
                                        {
                                            <label class="label label-success"><i class="fa fa-fw fa-check-square"></i>Yes</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa fa-fw fa-times"></i>No</label>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsHome)
                                        {
                                            <label class="label label-success"><i class="fa fa-fw fa-check-square"></i>Yes</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa fa-fw fa-times"></i>No</label>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsFeatured)
                                        {
                                            <label class="label label-success"><i class="fa fa-fw fa-check-square"></i>Yes</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa fa-fw fa-times"></i>No</label>
                                        }
                                    </td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("Edit",new {id=item.Id})">Update</a>
                                        <a class="btn btn-danger" href="@Url.Action("Delete",new {id=item.Id})">Delete</a>
                                    </td>

                                </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Approved</th>
                                <th>Home</th>
                                <th>Popular</th>
                                <th>Category Name</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
