@model MultiShop.Models.UserProfile
@{
    ViewBag.Title = "UserProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">My Profile</h2>
                            @using (Html.BeginForm("UserProfil", "Account", FormMethod.Post, new { @class = "" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-outline mb-4">
                                    <div class="col-md-10">
                                        <label class="form-label" for="form3Example1cg">Your Name</label>
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                                <div class="form-outline mb-4">
                                    <div class="col-md-10">
                                        <label class="form-label" for="form3Example1cg">Your Surname</label>
                                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                                <div class="form-outline mb-4">
                                    <div class="col-md-10">
                                        <label class="form-label" for="form3Example1cg">User Name</label>
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                                <div class="form-outline mb-4">
                                    <div class="col-md-10">
                                        <label class="form-label" for="form3Example1cg">Email</label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                                

                              
                                <div class="d-flex justify-content-center">
                                    <button type="submit" name="submitAccount" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Update Password
                                    </button>
                                </div>

                                
                            }



                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>